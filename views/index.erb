
<div class="container">
  <table class="table">
    <h2>Results</h2>
      <thead>
        <tr>
          <th>Total tickets: <%=@ticket_count%></th>
        </tr>
        <tr>
          <th>id</th>
          <th>subject</th>
        </tr>
      </thead>
      <tbody>
      <%@tickets.each do |ticket|%>
      <tr>
        <td><%= ticket["id"]%></td>
        <td><a href='/ticket/<%= ticket["id"]%>'><%= ticket["subject"]%></a></td>
      <%end%>
      </tr>
      </tbody>
  </table>
</div>


<div class="container">
  <ul class="pagination">

  <%# create a loop from 1 to @num_of_pages for pagination numbers %>
  <% for pg_num in 1..@num_of_pages %>
    <li><a href="?page=<%= pg_num %>"><%= pg_num %></a></li>
  <% end %>

  </ul>
</div>
